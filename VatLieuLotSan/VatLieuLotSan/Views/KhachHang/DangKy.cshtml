<!--Modal


    đăng nhập và đăng ký tài khoản khách hàng -->
<div id="dangky" class="modal fade " role="dialog" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal_dialog_MyCode">

        <div class="modal-content">
            @using (Html.BeginForm("DangNhap", "KhachHang", FormMethod.Post))
            {
                <div class="modal-header" style="text-align:center">
                    <h4 class="modal-title">Đăng Ký</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">

                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-12">
                                    <label class="control-label col-md-3">Tài Khoản</label>
                                    <div class="col-md-8">
                                        <div class="effect1 w-size9 ">
                                            <input class="s-text7 bg6 w-full p-b-5 input_KH" type="text" name="TaiKhoanKH">
                                            <span class="effect1-line"></span>
                                        </div>
                                        <label class="text-danger"></label>
                                    </div>
                                </div>

                            </div>


                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-12">
                                    <label class="control-label col-md-3">Mật Khẩu</label>
                                    <div class="col-md-8">
                                        <div class="effect1 w-size9 ">
                                            <input class="s-text7 bg6 w-full p-b-5 input_KH" type="password" name="MatKhauKH">
                                            <span class="effect1-line"></span>
                                        </div>
                                        <label class="text-danger"></label>
                                    </div>
                                </div>
                                <input class="s-text7 bg6 w-full p-b-5 input_KH" hidden type="password" name="Link_Web" value="@Request.Url.ToString()">

                            </div>


                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-12">
                                    <label class="control-label col-md-3">Email</label>
                                    <div class="col-md-8">
                                        <div class="effect1 w-size9 ">
                                            <input class="s-text7 bg6 w-full p-b-5 input_KH" type="email" name="Email">
                                            <span class="effect1-line"></span>
                                        </div>
                                        <label class="text-danger"></label>
                                    </div>
                                </div>
                             

                            </div>


                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-12">
                                    <label class="control-label col-md-3">Điện Thoại</label>
                                    <div class="col-md-8">
                                        <div class="effect1 w-size9 ">
                                            <input class="s-text7 bg6 w-full p-b-5 input_KH fa-phone phone" type="text" name="SDT">

                                            <span class="effect1-line"></span>

                                        </div>
                                        <script>
                                            //$('.phone').text(function (i, text) {
                                            //    i.preventDefault();
                                            //    return text.replace(/(\d{3})(\d{3})(\d{4})/, '$1-$2-$3');
                                            //});
                                            $('.phone').mask('(000) 000-0000');
                                        </script>
                                        <label class="text-danger"></label>
                                    </div>
                                </div>
                               
                            </div>


                        </div>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default" id="btn_DangNhapKhachHang" data-url="@Url.RequestContext.ToString()">Đăng Ký</button>
                    
                </div>
            }
        </div>
    </div>
</div>
