
@section scripts{
    
<script src="~/TaiLieu/Client/js/MyJs.js"></script>
    }


<!--Modal 
    
    
    đăng nhập và đăng ký tài khoản khách hàng -->
<div id="dangnhap" class="modal fade " role="dialog" data-keyboard="false" >
    <div class="modal-dialog modal_dialog_MyCode">

        <div class="modal-content">
            @using (Html.BeginForm("DangNhap", "KhachHang", FormMethod.Post))
            {
                <div class="modal-header" style="text-align:center">
                    <h4 class="modal-title">Đăng Nhập</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">

                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-12">
                                    <label class="control-label col-md-3">Tài Khoản</label>
                                    <div class="col-md-8">
                                        <div class="effect1 w-size9 ">
                                            <input class="s-text7 bg6 w-full p-b-5 input_KH" type="text" name="TaiKhoanKH">
                                            <span class="effect1-line"></span>
                                        </div>
                                        <label class="text-danger"></label>
                                    </div>
                                </div>

                            </div>


                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-12">
                                    <label class="control-label col-md-3">Mật Khẩu</label>
                                    <div class="col-md-8">
                                        <div class="effect1 w-size9 ">
                                            <input class="s-text7 bg6 w-full p-b-5 input_KH" type="password" name="MatKhauKH">
                                            <span class="effect1-line"></span>
                                        </div>
                                        <label class="text-danger"></label>
                                    </div>
                                </div>
                                <input class="s-text7 bg6 w-full p-b-5 input_KH" hidden type="password" name="Link_Web" value="@Request.Url.ToString()">
                               
                            </div>


                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div style="padding-left:133px">
                                    <div class="col-md-12">
                                        <input type="checkbox" id="brand1" name="GhiNho" value="">
                                        <label for="brand1">
                                            <span></span>Ghi nhớ
                                        </label>
                                    </div>
                                    <div class="col-md-12">
                                        <a href="#">Quên mật khẩu?</a>
                                    </div>
                                    <div class="clear"></div>
                                </div>




                            </div>


                        </div>
                    </div>

                    
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default" id="btn_DangNhapKhachHang" data-url="@Url.RequestContext.ToString()">Đăng Nhập</button>
                    <button type="button" class="btn btn-default" id="dangky" data-target="#dangky" data-toggle="modal"  data-dismiss="modal">Đăng ký</button>
                </div>
            }
       
        </div>
    </div>
</div>
<!--Stype cỉnh sửa form đăng nhập / đăng ký -->
<style>
    .modal_dialog_MyCode {
        left: 0;
        padding-top: 170px;
    }

    .input_KH {
        background-color: #ffffff;
    }

    .div_KH {
    }

    .sub-agile {
        float: left;
    }
</style>
