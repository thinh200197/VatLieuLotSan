@model List<VatLieuLotSan.DataBase.Menu>




<!-- Header desktop -->
<div class="container-menu-header">
    <div class="topbar">
        <div class="topbar-social">
            <a href="#" class="topbar-social-item fa fa-facebook"></a>
            <a href="#" class="topbar-social-item fa fa-instagram"></a>
            <a href="#" class="topbar-social-item fa fa-pinterest-p"></a>
            <a href="#" class="topbar-social-item fa fa-snapchat-ghost"></a>
            <a href="#" class="topbar-social-item fa fa-youtube-play"></a>
        </div>

        <span class="topbar-child1">
            miễn phí giao hàng
        </span>

        <div class="topbar-child2">
            <span class="topbar-email">
                congtyTH@gmail.com
            </span>

           
        </div>
    </div>

    <div class="wrap_header">
        <!-- Logo -->
        <a href="/" rel="nofollow" class="logo">
            <img src="~/TaiLieu/Client/images/icons/logo2.jpg" style="width : 120px;max-height:60px;" alt="IMG-LOGO">
        </a>

        <!-- Menu -->
        <div class="wrap_menu">
            <nav class="menu">
                <ul class="main_menu">
                    @foreach (var item in Model)
                    {
                        <li>
                            <a href="/@item.Link" rel="nofollow">@item.TenMenu</a>
                        </li>
                    }
                    
                </ul>
            </nav>
        </div>
        <!--Header Icon - Icon Tài khoản Khách hàng và giỏ hàng -->
        <div >
            @{Html.RenderAction("HeaderIconCart", "Home");}
        </div>
        
    </div>
</div>

