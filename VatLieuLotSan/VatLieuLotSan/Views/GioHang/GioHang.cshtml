@model List<VatLieuLotSan.Models.GioHangModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int sl = 1;
    var thanhTien = 0;
    var sp1 = Model;
}
@section scripts{

    <script src="/TaiLieu/Client/js/MyJs.js"></script>

}
<!-- Title Page -->
<section class="bg-title-page p-t-40 p-b-50 flex-col-c-m" style="background-image: url(/TaiLieu/Client/images/heading-pages-01.jpg);">
    <h2 class="l-text2 t-center">
        GIỎ HÀNG
    </h2>
</section>
<!-- Cart -->
<section class="cart bgwhite p-t-70 p-b-100">
    <div class="container">
        <!--Chi tiết giỏ hàng -->
        <div class="container-table-cart pos-relative">
            <div class="wrap-table-shopping-cart bgwhite">
                <table class="table-shopping-cart">
                    <tr class="table-head">
                        <th class="column-1"></th>
                        <th class="column-2">Sản phẩm</th>
                        <th class="column-3">Đơn giá / VNĐ</th>
                        <th class="column-4 p-l-40">Số lượng</th>
                        <th class="column-5">Tổng tiền</th>
                    </tr>
                @if (Model.Count > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr class="table-row">
                            <td class="column-1">
                                <div class="cart-img-product b-rad-4 o-f-hidden">
                                    <img src="@item.SanPham.HINH" data-id="@item.SanPham.MAHANG" alt="IMG-PRODUCT">
                                </div>
                            </td>
                            <td class="column-2">@item.SanPham.TENHANG</td>
                            <td class="column-3" name="colum-3">@(item.SanPham.GIABAN.GetValueOrDefault(0).ToString("N0"))</td>
                            <td class="column-4">
                                <div class="flex-w bo5 of-hidden w-size17">
                                    <button class="btn-num-product-down color1 flex-c-m size7 bg8 eff2">
                                        <i class="fs-12 fa fa-minus" aria-hidden="true"></i>
                                    </button>

                                    <input class="size8 m-text18 t-center num-product" data-ID type="number" onchange="CapNhatSoLuong()" name="num-product1" id="num-product1" value="@item.SoLuong">

                                    <button class="btn-num-product-up color1 flex-c-m size7 bg8 eff2">
                                        <i class="fs-12 fa fa-plus" aria-hidden="true"></i>
                                    </button>
                                    <!-- khi số lượng thay đổi sẽ cập nhật tổng tiền -->

                                    <script>
                                        function CapNhatSoLuong() {
                                            var x = document.getElementById("num-product1").value;
                                            var Tien  =@((item.SanPham.GIABAN * item.SoLuong).Value.ToString("N0"));
                                            document.getElementById("tongTien").value = Tien;

                                        }
                                    </script>
                                </div>
                            </td>
                            <td class="column-5" id="tongTien" name="tongTien">@((item.SanPham.GIABAN * item.SoLuong).Value.ToString("N0"))</td>

                        </tr>

                    }
                }
                else
                {
                    <span class="alert alert-danger" >Chưa có Sản phẩm nào trong giỏ hàng </span>
                }
                    

                </table>
            </div>
        </div>

        <div class="flex-w flex-sb-m p-t-25 p-b-25 bo8 p-l-35 p-r-60 p-lr-15-sm">
            <div class="flex-w flex-m w-full-sm">
                <div class="size12 trans-0-4 m-t-10 m-b-10 m-r-10">
                    <!-- Button  Chuyển về trang sản phẩm -->
                    <button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4" id="btn_TiepTucMuaHang">
                        Tiếp tục mua hàng
                    </button>
                </div>

                <div class="size12 trans-0-4 m-t-10 m-b-10 m-r-10">
                    <!-- Button  Xóa toàn bộ sản phẩm trong giỏ hàng-->
                    <button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4" id="btn_XoaGioHang">
                        Xóa giỏ hàng
                    </button>
                </div>
            </div>

            <div class="size10 trans-0-4 m-t-10 m-b-10">
                <!-- Button Cập nhật số lượng trong giỏ hàng-->
                <button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4" id="btn_CapNhatGioHang">
                    cập nhật giỏ hàng
                </button>
            </div>
        </div>


        <!-- HÓA ĐƠN -->
        <div class="bo9 p-l-40 p-r-40 p-t-30 p-b-38 m-t-30 m-r-0 p-lr-15-sm">
            <h3 class="m-text20 p-b-24 t-center">
                HÓA ĐƠN
            </h3>

            <!-- HIỆN THỊ TỔNG SỐ SẢN PHẨM TRONG GIỎ . -->
            <div class="flex-w flex-sb-m p-b-12">
                <span class="s-text18 w-size19 w-full-sm">
                    Tổng số sản phẩm :
                </span>

                <span class="m-text21 w-size20 w-full-sm">
                    @Model.Sum(x => x.SoLuong)
                </span>

                <span class="m-text22 w-size19 w-full-sm">
                    Tổng:
                </span>

                <span class="m-text21 w-size20 w-full-sm">
                    @Model.Sum(x => x.ThanhTien).ToString("N0") VNĐ
                </span>
            </div>


            <!--============================================================================================  -->
            <!-- Cho nhập thông tin khách hàng và nơi giao .  -->
            <!--Thông tin khách hàng -->
            <div class="row">
                <div class="col-12">
                    <div class="flex-w flex-sb bo10 p-t-15 p-b-20">
                        <div class="col-md-6 p-b-30">
                            <form class="leave-comment">
                                <h4 class="m-text26 p-b-36 p-t-15">
                                    THÔNG TIN CỦA KHÁCH HÀNG
                                </h4>

                                <div class="bo4 of-hidden size15 m-b-20">
                                    <input class="sizefull s-text7 p-l-22 p-r-22" type="text" name="name" placeholder="Họ và tên">
                                </div>

                                <div class="bo4 of-hidden size15 m-b-20">
                                    <input class="sizefull s-text7 p-l-22 p-r-22" type="text" name="phone-number" placeholder="Số điện thoại">
                                </div>

                                <div class="bo4 of-hidden size15 m-b-20">
                                    <input class="sizefull s-text7 p-l-22 p-r-22" type="text" name="email" placeholder="Email">
                                </div>

                                <textarea class="dis-block s-text7 size20 bo4 p-l-22 p-r-22 p-t-13 m-b-20" name="message" placeholder="Ghi chú"></textarea>


                            </form>
                        </div>
                        <!--Hình thức thanh toán -->
                        <div class="col-md-6 p-b-30">
                            <div class="p-r-20 p-r-0-lg">

                            </div>
                        </div>

                    </div>
                    <!--============================================================================================  -->

                </div>
            </div>

            <div class="flex-w flex-sb-m p-t-26 p-b-30">
                <div class="size15 trans-0-4">
                    <!-- Button  THANH TOÁN HÓA ĐƠN-->
                    <button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
                        THANH TOÁN
                    </button>
                </div>
            </div>
            <!--============================================================================================  -->
        </div>

    </div>
</section>

